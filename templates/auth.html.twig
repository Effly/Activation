{% extends 'base.html.twig' %}

{% block title %}Authentication{% endblock %}

{% block content %}
    <div class="container mt-5">
    <h2>Активация</h2>
    {% if errors.notFound is defined and errors.notFound is not empty %}
        <div class="alert alert-danger" role="alert">
            {{ errors.notFound }}
        </div>
    {% elseif errors.isActivated is defined and errors.isActivated is not empty %}
        <div class="alert alert-danger" role="alert">
            {{ errors.isActivated }}
        </div>
    {% else %}

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.number, 'Номер договора') }}
            {{ form_widget(form.number, {'attr': {'class': 'form-control ' ~ (errors.number is defined and errors.number is not empty ? 'is-invalid' : '')}}) }}
            {% if errors.number is defined and errors.number is not empty %}
                <div class="invalid-feedback">
                    {{ errors.number|join(', ') }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.pin, 'PIN-код') }}
            {{ form_widget(form.pin, {'attr': {'class': 'form-control ' ~ (errors.pin is defined and errors.pin is not empty ? 'is-invalid' : '')}}) }}
            {% if errors.pin is defined and errors.pin is not empty %}
                <div class="invalid-feedback">
                    {{ errors.pin|join(', ') }}
                </div>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

        {{ form_end(form) }}

        {% if errors.notFound is defined %}
            <div class="alert alert-danger mt-3">
                {{ errors.notFound }}
            </div>
        {% endif %}
        </div>
    {% endif %}
{% endblock %}
